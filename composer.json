{
    "name": "lucasdavies/wikitextbuilder",
    "type": "library",
    "description": "A fluent PHP library for programmatically building MediaWiki wikitext markup, including tables, lists, and templates",
    "keywords": [
        "mediawiki",
        "wikitext",
        "wiki",
        "markup",
        "builder",
        "wikipedia"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas Davies",
            "email": "info@lucasdavies.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "LucasDavies\\WikitextBuilder\\": "src/"
        }
    },
    "require": {
        "php": "^8.4"
    },
    "autoload-dev": {
        "psr-4": {
            "LucasDavies\\WikitextBuilder\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "symfony/var-dumper": "^8.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
